{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"strict": true,
		"strictFunctionTypes": false,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}
